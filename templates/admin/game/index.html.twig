{% extends 'base.html.twig' %}

{% block title %}Hello GameController!{% endblock %}

{% block body %}
<h1>Liste des jeux</h1>
    <table class="table table-bordered">
        <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>Joueur min</th>
            <th>Joueur Max</th>
        </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.title }}</td>
                <td>{{ game.minPlayers }}</td>
                <td>{{ game.maxPlayers }}</td>
            </tr>
            {% else %}
                <tr>
                    <td clospan="4">Aucun jeu n'est enregistr√©</td>
                </tr>
        {% endfor %}
                
        </tbody>
    </table>
{% endblock %}
